@import '../imports.styl'

{el = '.more'}
  &__header
    position            relative
    display             inline-block
    cursor              pointer
    padding-right       2.2*gs
    text-align          center
  &__arrow
    border              4*PX solid
    border-top-color    transparent
    border-right-color  transparent
    transform           rotate(-45deg)
    transition          transform .15s ease-out
    position            absolute
    right               .2*gs
    top                 1*gs
    rect                0
  &__content
    overflow            hidden
    height              0
    opacity             0
    transition          all .25s ease-out
  &.is-center
    text-align          center
  &.is-open
    {el}__arrow
      transform         rotate(135deg) translate(3*PX, -3*PX)
    {el}__content
      opacity           1
    
    